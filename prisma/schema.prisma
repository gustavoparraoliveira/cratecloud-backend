generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  tracks    Track[]
  createdAt DateTime @default(now())
}

model Track {
  id        Int      @id @default(autoincrement())
  title     String?
  artist    String?
  duration  Int? 
  thumbnail String?
  bpm       Int?
  key       String?
  genre     String?
  filename  String?
  url       String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}
